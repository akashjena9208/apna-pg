<configuration>

    <property name="PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] [req:%X{requestId}] %logger - %msg%n"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${PATTERN}</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>
